{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "sleepApplication": false,
    "startCommand": "",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "envVars": {
      "BOT_TOKEN": {
        "required": true,
        "description": "Your Telegram bot token"
      }
    }
  }
}
